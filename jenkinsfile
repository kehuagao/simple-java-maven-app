pipeline {
	agent any
    stages {
    	dir('D:/.jenkins/workspace/simple-java-maven-app')
        stage('Build') {
            steps {
                sh 'maven.bat'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') { 
            steps {
                sh 'deliver.bat' 
            }
        }
    }
}