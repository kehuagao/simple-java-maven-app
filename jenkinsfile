pipeline {
	agent any
    stages {
        stage('Build') {
            steps {
            	d:
            	cd D:/.jenkins/workspace/simple-java-maven-app@script
                mvn -B -DskipTests clean package
            }
        }
        stage('Test') {
            steps {
                mvn test
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        
    }
}